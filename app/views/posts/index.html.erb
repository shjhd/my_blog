<div>
  <h1>Listing posts</h1>


<% @posts.each do |post| %>

    <p><%= link_to post.title, post %></p>
    <p><%= post.content %></p>
    <p><%= post.created_at %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>

<% end %>

<br />

<%= link_to 'New Post', new_post_path %>
</div>