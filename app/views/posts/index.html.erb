<div class="header-img">
  <h1>My Blog</h1>
  <hr class="small">
  <h2>A Clean Blog Theme by Start Bootstrap</h2>
</div>
<div class="container">
<div class="row">
  <div class="col-sm-2 col-md-3 col-lg-4">
    <%= bootstrap_form_for(:session, url: sessions_path) do |f| %>
      <%= f.text_field :name %>
      <%= f.password_field :password %>
      <%= f.submit "登入", class: "btn btn-primary btn-home" %>
      <%= link_to "注册", newuser_path, class: "btn btn-primary btn-home2" %>
    <% end %>
  </div>
  <div class="col-sm-10 col-md-9 col-lg-8">
    <div class="content">
      <% @posts.each do |post| %>
      <%= link_to post do%>
      <h2><%= post.title %></h2>
      <h3><%= truncate(post.content, :length => 30) %></h3>
      <% end %>
      <p>
         <%= l post.created_at, format: :short %>
         <%= link_to 'Edit', edit_post_path(post) %>
         <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <hr>
      <% end %>
      <br />
      <%= link_to 'New Post', new_path %>
    </div>
  </div>
</div>
</div>