<% provide(:title, 'Sign in') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= bootstrap_form_for(@user) do |f| %>
      <%= f.text_field :name %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
